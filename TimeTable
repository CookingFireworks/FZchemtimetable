                    },
                    "星期五": {
                        "第六节": { subject: "化学", class: "2306" },
                        "第七节": { subject: "化学", class: "2320" }
                    },
                    "星期二": {
                        "第七节": { subject: "化学", class: "2306" },
                        "第八节": { subject: "化学", class: "2320" }
                    }
                }
            }
        ];

        // 页面元素
        const gradeSelect = document.getElementById('grade-select');
        const teacherSelect = document.getElementById('teacher-select');
        const searchBtn = document.getElementById('search-btn');
        const scheduleTable = document.getElementById('schedule-table');
        const scheduleCards = document.getElementById('schedule-cards');
        const teacherInfo = document.getElementById('teacher-info');
        const noData = document.getElementById('no-data');

        // 初始化
        document.addEventListener('DOMContentLoaded', function() {
            // 年级选择变化事件
            gradeSelect.addEventListener('change', function() {
                const selectedGrade = this.value;
                
                // 清空教师选择
                teacherSelect.innerHTML = '<option value="">请选择教师</option>';
                teacherSelect.disabled = !selectedGrade;
                
                if (selectedGrade) {
                    // 过滤该年级的化学教师
                    const gradeTeachers = chemistryTeachers.filter(teacher => teacher.grade === selectedGrade);
                    
                    // 添加教师选项
                    gradeTeachers.forEach(teacher => {
                        const option = document.createElement('option');
                        option.value = teacher.name;
                        option.textContent = teacher.name;
                        teacherSelect.appendChild(option);
                    });
                }
                
                // 重置显示
                resetDisplay();
            });
            
            // 搜索按钮点击事件
            searchBtn.addEventListener('click', function() {
                const selectedGrade = gradeSelect.value;
                const selectedTeacher = teacherSelect.value;
                
                if (!selectedGrade || !selectedTeacher) {
                    alert('请选择年级和教师');
                    return;
                }
                
                // 查找选中的教师
                const teacher = chemistryTeachers.find(t => t.name === selectedTeacher && t.grade === selectedGrade);
                
                if (teacher) {
                    displayTeacherInfo(teacher);
                    displaySchedule(teacher);
                } else {
                    alert('未找到该教师的课表信息');
                }
            });
            
            // 初始状态
            resetDisplay();
        });

        // 重置显示
        function resetDisplay() {
            teacherInfo.style.display = 'none';
            scheduleCards.innerHTML = '';
            scheduleTable.innerHTML = '';
            noData.style.display = 'block';
        }

        // 显示教师信息
        function displayTeacherInfo(teacher) {
            teacherInfo.innerHTML = `
                <h3>教师信息</h3>
                <p><strong>姓名：</strong>${teacher.name}</p>
                <p><strong>工号：</strong>${teacher.id}</p>
                <p><strong>年级：</strong>${teacher.grade}</p>
                <p><strong>学科：</strong>化学</p>
            `;
            teacherInfo.style.display = 'block';
            noData.style.display = 'none';
        }

        // 显示课表
        function displaySchedule(teacher) {
            // 清空表格和卡片
            scheduleTable.innerHTML = '';
            scheduleCards.innerHTML = '';
            
            // 定义节次
            const periods = [
                "第一节", "第二节", "第三节", "第四节", "第五节", 
                "第六节", "第七节", "第八节", "第九节"
            ];
            
            // 创建桌面表格
            if (window.innerWidth >= 768) {
                // 创建表头
                const headerRow = document.createElement('tr');
                headerRow.innerHTML = '<th class="period">节次</th><th>星期一</th><th>星期二</th><th>星期三</th><th>星期四</th><th>星期五</th>';
                scheduleTable.appendChild(headerRow);
                
                // 创建每一行的数据
                periods.forEach(period => {
                    const row = document.createElement('tr');
                    
                    // 添加节次单元格
                    const periodCell = document.createElement('td');
                    periodCell.className = 'period';
                    periodCell.textContent = period;
                    row.appendChild(periodCell);
                    
                    // 添加每一天的课程信息
                    const days = ["星期一", "星期二", "星期三", "星期四", "星期五"];
                    days.forEach(day => {
                        const cell = document.createElement('td');
                        
                        if (teacher.schedule[day] && teacher.schedule[day][period]) {
                            const course = teacher.schedule[day][period];
                            cell.innerHTML = `
                                <div class="course-info">
                                    <strong>${course.subject}</strong><br>
                                    ${course.class}
                                </div>
                            `;
                        } else {
                            cell.textContent = '-';
                        }
                        
                        row.appendChild(cell);
                    });
                    
                    scheduleTable.appendChild(row);
                });
            } else {
                // 创建移动端卡片布局
                const days = ["星期一", "星期二", "星期三", "星期四", "星期五"];
                
                days.forEach(day => {
                    const dayCard = document.createElement('div');
                    dayCard.className = 'day-card';
                    
                    // 添加日期标题
                    const dayHeader = document.createElement('div');
                    dayHeader.className = 'day-header';
                    dayHeader.textContent = day;
                    dayCard.appendChild(dayHeader);
                    
                    // 添加课程列表
                    const periodsList = document.createElement('div');
                    periodsList.className = 'periods-list';
                    
                    periods.forEach(period => {
                        const periodItem = document.createElement('div');
                        periodItem.className = 'period-item';
                        
                        // 节次时间
                        const periodTime = document.createElement('div');
                        periodTime.className = 'period-time';
                        periodTime.textContent = period;
                        periodItem.appendChild(periodTime);
                        
                        // 课程详情
                        const courseDetails = document.createElement('div');
                        courseDetails.className = 'course-details';
                        
                        if (teacher.schedule[day] && teacher.schedule[day][period]) {
                            const course = teacher.schedule[day][period];
                            courseDetails.innerHTML = `
                                <div class="course-subject">${course.subject}</div>
                                <div class="course-class">${course.class}</div>
                            `;
                        } else {
                            courseDetails.innerHTML = '<div class="no-class">无课</div>';
                        }
                        
                        periodItem.appendChild(courseDetails);
                        periodsList.appendChild(periodItem);
                    });
                    
                    dayCard.appendChild(periodsList);
                    scheduleCards.appendChild(dayCard);
                });
            }
        }
    </script>
</body>
</html>
